{
  "name": "veritron-react-kit",
  "version": "1.0.0",
  "type": "module",
  "description": "Veritron Design System - React + Tailwind CSS Implementation",
  "keywords": [
    "design-system",
    "react",
    "tailwind",
    "components",
    "veritron",
    "atomic-design"
  ],
  "author": "Veritron Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest --coverage",
    "audit:ui": "tsx scripts/ui-audit.ts",
    "audit:ui:node": "node --loader ts-node/esm scripts/ui-audit.ts",
    "convex:dev": "npx convex dev",
    "convex:deploy": "npx convex deploy",
    "convex:dashboard": "npx convex dashboard",
    "convex:setup": "./scripts/setup-convex.sh",
    "convex:seed": "npx convex run seed:seedAll",
    "convex:clear": "npx convex run seed:clearAll",
    "dev:full": "concurrently \"npm run dev\" \"npm run convex:dev\"",
    "perf:psi": "node scripts/psi-fetch.mjs",
    "perf:crux": "node scripts/crux-fetch.mjs",
    "perf:audit": "npm run perf:psi && npm run perf:crux",
    "perf:baseline": "node scripts/show-baseline.mjs",
    "perf:mock": "node scripts/generate-mock-metrics.mjs",
    "perf:dashboard": "vite --port 3001 --open /dashboard.html",
    "perf:test:local": "npx lighthouse http://localhost:5173 --view",
    "perf:analyze": "node scripts/perf-analyze.mjs",
    "perf:compare": "node scripts/perf-compare.mjs",
    "perf:report": "node scripts/perf-report.mjs",
    "perf:validate-budgets": "node scripts/validate-budgets.mjs",
    "perf:validate-budgets:strict": "node scripts/validate-budgets.mjs --strict",
    "perf:snapshot": "node scripts/perf-snapshot.mjs",
    "perf:diff": "node scripts/perf-diff.mjs",
    "perf:export": "node scripts/perf-export.mjs",
    "perf:status": "node scripts/perf-status.mjs",
    "edge:dev": "cd edge && wrangler dev",
    "edge:deploy:staging": "cd edge && wrangler deploy --env staging",
    "edge:deploy:prod": "cd edge && wrangler deploy --env production",
    "edge:logs": "cd edge && wrangler tail --env production",
    "edge:test": "cd edge && node test-worker.js",
    "edge:validate:headers": "curl -I https://veritron.com/ | grep -E '(X-|Content-Security|Strict-Transport)'",
    "edge:validate:seo": "curl -s https://veritron.com/sitemap.xml | head -20 && curl -s https://veritron.com/robots.txt | head -10",
    "sxg:test": "node edge/sxg/test.mjs",
    "sxg:test:staging": "node edge/sxg/test.mjs staging",
    "sxg:test:prod": "node edge/sxg/test.mjs production",
    "sxg:validate": "node edge/sxg/validate.mjs",
    "sxg:validate:staging": "node edge/sxg/validate.mjs staging",
    "sxg:validate:prod": "node edge/sxg/validate.mjs production",
    "sxg:deploy": "./edge/sxg/deploy.sh",
    "sxg:deploy:staging": "./edge/sxg/deploy.sh --environment staging",
    "sxg:deploy:prod": "./edge/sxg/deploy.sh --environment production",
    "sxg:deploy:dry-run": "./edge/sxg/deploy.sh --dry-run",
    "sxg:health": "curl -s https://veritron.com/health/sxg | jq",
    "sxg:health:staging": "curl -s https://staging.veritron.com/health/sxg | jq",
    "sxg:cert:validate": "openssl x509 -in edge/sxg/cert/prod/certificate.pem -text -noout | grep -A5 -B5 '1.3.6.1.4.1.11129.2.1.22'",
    "sxg:test:e2e": "curl -H 'Accept: application/signed-exchange;v=b3' -H 'User-Agent: Chrome/120.0.0.0' https://veritron.com/ -o test.sxg && dump-signedexchange -i test.sxg -verify"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.1",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.3.2",
    "@react-spring/three": "^10.0.1",
    "@react-spring/web": "^10.0.1",
    "@react-three/drei": "^9.92.0",
    "@react-three/fiber": "^8.15.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.25.4",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.18.0",
    "gsap": "^3.12.4",
    "lottie-react": "^2.4.0",
    "lucide-react": "^0.294.0",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-datepicker": "^4.21.0",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.48.2",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.6.0",
    "three": "^0.160.0",
    "uuid": "^9.0.1",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.6",
    "@storybook/react": "^7.6.6",
    "@storybook/react-vite": "^7.6.6",
    "@storybook/test": "^7.6.6",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.43",
    "@types/react-beautiful-dnd": "^13.1.5",
    "@types/react-datepicker": "^4.19.4",
    "@types/react-dom": "^18.2.17",
    "@types/react-helmet-async": "^1.0.1",
    "@types/three": "^0.160.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "jsdom": "^23.0.1",
    "playwright": "^1.54.2",
    "postcss": "^8.4.32",
    "react-use-measure": "^2.1.7",
    "storybook": "^7.6.6",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
